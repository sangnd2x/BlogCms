# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3200

# API Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com
NEXT_PUBLIC_API_PREFIX=api/v1

# App Configuration
NEXT_PUBLIC_APP_NAME=Blog CMS
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=A modern blog content management system

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY=blog_cms_token_prod

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf